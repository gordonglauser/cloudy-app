<%= form_for @user do |f| %>
<% @user.errors.full_messages.each do |msg| %>
<p><%= msg %></p>
<% end %>
<p>
  <div class="field">
    <%= f.label :login %><br />
    <%= f.text_field :login %>
  </div>
</p>
<p>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
</p>
<p>
<div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
<div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </div>
</p>
  <div class="actions">
    <p><%= f.submit %></p>
  </div>
<% end %>
