<%= form_for @user_session do |f| %>


<p>
  <div class="field">
    <%= f.label :login %><br />
    <%= f.text_field :login %>
  </div>
</p>
<p>
<div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <p><%= f.submit("Click to Login") %></p>
  </div>
<% end %>
